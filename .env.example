APP_NAME=ChatPDF
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=chatpdf
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION=database
CACHE_STORE=database

# OpenAI API Key (get from https://platform.openai.com/api-keys)
# Leave empty for Phase 1-2, required from Phase 6+
OPENAI_API_KEY=

# Python Service URL
PYTHON_SERVICE_URL=http://localhost:8001
USE_PYTHON_BACKEND=true

# Storage Optimization
# Max PDF file size in bytes
# 10MB = 10485760, 20MB = 20971520, 50MB = 52428800
MAX_PDF_SIZE=10485760
